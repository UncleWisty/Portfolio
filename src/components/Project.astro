---
const {image, name, description, url} = Astro.props;
import cvData from '../data/cv.json';



---

{cvData.projects.map((project)=>(
<div class="flex flex-col mb-10 p-3 w-100% sm:w-1/2">
    
<div class="w-full sm:h-2/3">

<a href={`projects/${project.slug}`}><img src={`${project.image}`} alt="" class="object-cover mb-5 sm:mb-20"></a>

</div>

<div class="w-full  bg-black border-5 border-green-700 border-dashed py-5 px-5">

<a href={`projects/${project.slug}`}><h1 class="text-3xl mb-5">{`${project.name}`}</h1></a>

<h3 class="">{`${project.description}`}</h3>

</div>
</div>
))}



